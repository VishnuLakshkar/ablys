<div style="width:100%; padding: 10px 5px; font-size:13px;">
  <table width="99%;">
    <thead>
      <th width="5%">No.</th>
      <th width="30%">Name</th>
      <th width="15%">City</th>
      <th width="15%">Membership</th>
      <th width="18%">Serial Number</th>
      <th width="17%">Mobile Number</th>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to "Mr. #{user.name}", user_path(user.id) %></td>
          <td><%= user.city %></td>
          <td><%= user.membership %></td>
          <td><%= user.serial_number %></td>
          <td><%= user.phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<style type="text/css">
  table, th, td {border: 1px solid gray;}
  thead {background-color: #BE0C0C;color: white;}
  td, th {font-size: 14px;text-transform: capitalize; vertical-align: top;padding: 5px;}
  tr {border: 1px solid gray;}
</style>
