<div style="border:1px solid #d6d6d6;margin-top:10px;">
  <div style="background-color:#BE0C0C; padding:9px 3px 0px 15px;">
    <%= search_form_for @q do |f| %>
      <%= f.text_field :name_cont, style: 'width:180px;margin-right:5px;',placeholder: "Enter Name" %>
      <%= f.select :state_cont, options_for_select($state.sort, selected: @q.state_cont),{include_blank: "Select State"}, class: "state_class" %>
      <%= f.select :city_cont, options_for_select(City.pluck('name'),  selected: @q.city_cont), {include_blank: "Select City"}, class: "user_city" %>
      <%= button_tag 'Search', style: 'padding: 2px 7px;margin-top: -10px;' %>
     <% end %>
  </div>
</div>
<%= render 'index' %>