<div style="padding: 5px 0px 5px 5px;">
  <div style="color: #FA351E; font-size: 17px; padding-top: 5px;"><b>Contact Us</b></div><br>
  <div style="font-size: 14px;"><p>Please enter your message here. You can write us for any suggestions or query also.</p>
  <p> In case of query, you will get reply on your email.</p></div><br>
  <%= form_for(@user_message, url: create_message_path(@user_message), :html => { :class => 'user_form' }) do |f| %>
    <% if @user_message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user_message.errors.count, "error") %> prohibited this user_message from being saved:</h2>

        <ul>
        <% @user_message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'validate[required]', style: "width: 75%;" %>
    </div>
    <div class="field">
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'validate[required]', style: "width: 75%;" %>
    </div>
    <div class="field">
      <%= f.label :message %>
      <%= f.text_area :message, size: "40x8", class: 'validate[required]', style: "width: 75%;" %>
    </div>
    <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id if current_user %>
    </div>
    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
    <br>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $(".user_form").validationEngine({promptPosition : "bottomLeft"});
   });
</script>