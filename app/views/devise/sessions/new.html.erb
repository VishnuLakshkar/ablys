<div class="modal-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="flash_alert"><%= resource.errors.full_messages.join("\n")%></div>

    <div class="row">
      <div class='col-md-11 error'></div>
    </div>
    <div class="row">
      <div class="col-md-11">
        <%= f.label :username_or_email %>
        <%= f.text_field :login, autofocus: true, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-11">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>
    </div>
    <div style="min-height: 5px;clear:both;"></div>
    <div class="row">
      <div style="float:right;" id='fgt_password'>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
      </div>
    </div>
    <div style="min-height: 5px;clear:both;"></div>

    <div class="row">
      <div class="col-md-12">
        <%= f.submit 'Sign In', :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', root_path, :class => 'btn btn-default' %>
      </div>
    </div>
    <div style="min-height: 5px;"></div>
<% end %>
</div>

<style type="text/css">
  .row {margin-right: 0px;}
  .error {color: red;font-size: 14px;}
</style>
