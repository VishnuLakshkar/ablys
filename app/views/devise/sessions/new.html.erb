<%= form_for(resource, as: resource_name, url: session_path(resource_name), :remote => 'true') do |f| %>
  <div class="modal-body">
    <div class="row">
      <div class='error'></div>
      <div class="col-md-7">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
      </div>

      <div class="col-md-7">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div style="float:right;" id='fgt_password'>
        <%= link_to "Forgot your password ?", '#' %>
      </div>
    </div>
    <div style="min-height: 5px;"></div>

    <div class="row">
      <div class="col-md-12">
        <%= f.submit 'Sign In', :class => 'btn btn-primary' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    <div style="min-height: 5px;"></div>
  </div>
<% end %>
<div class="modal-footer">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to image_tag("facebook-login-button.gif"), omniauth_authorize_path(resource_name, provider) %>
      <% end -%>
    <% end -%>
  </div>


<style type="text/css">
  .row {margin-right: 0px;}
</style>

<%#= render "devise/shared/links" %>
